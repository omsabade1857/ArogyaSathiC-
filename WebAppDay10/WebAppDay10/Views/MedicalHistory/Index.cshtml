@model IEnumerable<WebAppDay10.Models.PatientHistory>

@{
    ViewData["Title"] = "Index";
}

<h1>Patient Medical History</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.visitDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.doctorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.symptoms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.medicine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.remark)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.visitDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.doctorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.symptoms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.medicine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.remark)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
