@{
    if (User.IsInRole("Patient"))
    {
        Layout = "/Views/Shared/_PatientLayout.cshtml";
    }
    else if (User.IsInRole("Admin"))
    {
        Layout = "/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        // Default layout
        Layout = "/Views/Shared/_Layout.cshtml";
    }
}